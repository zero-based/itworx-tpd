{
  "private": true,
  "name": "tpd",
  "workspaces": [
    "client",
    "database",
    "server"
  ],
  "scripts": {
    "client": "yarn workspace @tpd/client dev",
    "server": "yarn workspace @tpd/server dev",
    "dev": "concurrently --kill-others-on-fail yarn:server yarn:client",
    "build": "yarn workspaces run build",
    "deploy": "pm2 start ecosystem.config.js --env production"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}